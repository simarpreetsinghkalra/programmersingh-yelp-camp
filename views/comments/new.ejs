<%- include('../partials/header'); -%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %> </h1>
        <div style="width: 30%; margin: 5px auto;">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Comment Text" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author" />
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-block btn-primary">Post</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id %> ">Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer'); -%>